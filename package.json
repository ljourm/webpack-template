{
  "name": "webpack-template",
  "version": "1.0.0",
  "repository": "https://github.com/ljourm/webpack-template",
  "author": "ljourm <ljourm@gmail.com>",
  "license": "MIT",
  "scripts": {
    "serve": "webpack serve",
    "build": "webpack",
    "build:prod": "cross-env NODE_ENV=\"production\" webpack",
    "clean": "rimraf dist/*",
    "lint": "yarn lint:format && yarn lint:js && yarn lint:style && yarn lint:pug",
    "lint:fix": "yarn lint:format:fix && yarn lint:js:fix && yarn lint:style:fix",
    "lint:format": "prettier -c ./**/*",
    "lint:format:fix": "prettier -w ./**/*",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint --fix .",
    "lint:style": "stylelint **/*.css **/*.scss",
    "lint:style:fix": "stylelint --fix **/*.css **/*.scss",
    "lint:pug": "pug-lint ."
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@fortawesome/fontawesome-svg-core": "6.2.1",
    "@fortawesome/free-solid-svg-icons": "6.2.1",
    "autoprefixer": "10.4.13",
    "babel-loader": "9.1.2",
    "babel-polyfill": "6.26.0",
    "bulma": "0.9.4",
    "clean-webpack-plugin": "4.0.0",
    "cross-env": "7.0.3",
    "css-loader": "6.7.3",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "file-loader": "6.2.0",
    "globule": "^1.3.4",
    "html-loader": "4.2.0",
    "html-webpack-plugin": "5.5.0",
    "jquery": "3.6.3",
    "jquery-single-page-form": "0.2.0",
    "mini-css-extract-plugin": "2.7.2",
    "postcss": "^8.4.21",
    "postcss-loader": "^7.0.2",
    "prettier": "2.8.2",
    "pug": "3.0.2",
    "pug-lint": "2.6.0",
    "pug-loader": "2.4.0",
    "sass": "^1.57.1",
    "sass-loader": "^13.2.0",
    "stylelint": "14.16.1",
    "stylelint-config-rational-order": "0.1.2",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "4.3.0",
    "stylelint-webpack-plugin": "3.3.0",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  }
}
